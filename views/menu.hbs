<h1>Меню</h1>

{{#if products.length}}
<div class="row">
{{#each products}}
    <div class="col s4">
        <div class="card">
            <div class="card-image">
                <img src="{{image}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action">
                <a href="/menu/{{_id}}">Открыть продукт</a>
                <a href="/menu/{{_id}}/edit?allow=true">Редактировать</a>
            </div>
        </div>
    </div>
{{/each}}
</div>
{{else}}
<p>Продуктов пока нет</p>
{{/if}}