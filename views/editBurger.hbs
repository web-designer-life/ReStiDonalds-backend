<h1>Редактировать {{burger.name}}</h1>

<form action="/menu/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" value="{{burger.name}}" required>
        <label for="name">Название</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="0" value="{{burger.price}}" step=".01" required>
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{burger.img}}" required>
        <label for="img">URL</label>
        <span class="helper-text" data-error="Введите URL"></span>
    </div>

    <div class="input-field">
        <input id="toppings" name="toppings" type="text" class="validate" value="{{burger.toppings}}">
        <label for="toppings">Введите дополнения (Пример: "Ананас,Кетчуп")</label>
        <span class="helper-text" data-error="Введите дополнения"></span>
    </div>

    <input name="id" type="hidden" value="{{burger._id}}">

    <button class="btn btn-primary" type="submit">Применить изменения</button>
</form>

<form action="/menu/remove" method="POST">
    <input name="id" type="hidden" value="{{burger._id}}">

    <button class="btn red">Удалить бургер</button>
</form>