<h1>Добавить закуску/напиток</h1>

<form action="/addOther" method="POST">
    <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required>
        <label for="name">Название</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="0" step=".01" required>
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">URL</label>
        <span class="helper-text" data-error="Введите URL"></span>
    </div>
    
    <div class="input-field">
        <input id="choices" name="choices" type="text" class="validate">
        <label for="choices">Введите вариации выбора (Пример: "Ананас,Кетчуп")</label>
        <span class="helper-text" data-error="Введите вариации выбора"></span>
    </div>

    <button class="btn btn-primary">Добавить</button>
</form>